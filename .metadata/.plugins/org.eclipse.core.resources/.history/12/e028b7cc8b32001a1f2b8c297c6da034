package nccs.omts.repository;

public class GenreRepository {


	public List<Genre> getGenre() throws SQLException{
		Connection connection = DBconnection.getConnection();
		Statement statement=connection.createStatement();
		ResultSet rs=statement.executeQuery("Select * from genre");
		List<Genre> genre=new ArrayList<>();
		
		while (rs.next()) {
			Genre genre = new Genre(rs.getInt(1),rs.getString(50));
			Genre.add(genre);
		}
		return genre;
	}

	public void addToGenre(int genre_id,String genre_name) throws SQLException{
		Connection connection= DBconnection.getConnection();
		Statement statement=connection.createStatement();
		statement.excuteUpdate("INSERT INTO genre values("+genre_id+","+genre_name+")");

	}
}
