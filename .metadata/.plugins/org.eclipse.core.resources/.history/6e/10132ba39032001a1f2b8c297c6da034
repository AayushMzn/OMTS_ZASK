package nccs.omts.repository;

public class CustomerRepository {
	public List<customer> getCustomer() throws SQLException{
		Connection connection = DBconnection.getConnection();
		Statement statement=connection.createStatement();
		ResultSet rs=statement.executeQuery("Select * from customer");
		List<cutsomer> customers=new ArrayList<>();
		
		while (rs.next()) {
			Customer customer = new customer(rs.getInt(1), rs.getString(2), rs.getInt(3),rs.getString(4);
			customers.add(customer);
		}
		return customers;
	}

	public void addToCustomer(int customer_id,String customer_name,String email,int phone_num)throws SQLException{
		Connection connection=DBconnection.getConnection();
		Statement statement=connection.createStatement();
		statement.executeUpdate("INSERT INTO customer values("+customer_id+","+customer_name+","+customer_phone_num+","+customer_email+")");
	}
}

