package nccs.omts.repository;

public class TicketRepository {
	public List<ticket> getTicket() throws SQLException{
		Connection connection = DBconnection.getConnection();
		Statement statement=connection.createStatement();
		ResultSet rs=statement.executeQuery("Select * from ticket");
		List<ticket> tickets=new ArrayList<>();
		
		while (rs.next()) {
			Ticket ticket = new ticket(rs.getInt(1), rs.getString(2), rs.getInt(3);
			tickets.add(ticket);
		}
		return tickets;
	}
}
public void addToTicket(int ticket_id,int no_of_tickets,int price)throws SQLException{
		Connection connection=DBconnection.getConnection();
		Statement statement=connection.createStatement();
		statement.executeUpdate("INSERT INTO ticket values("+ticket_id+","+ticket_num_of_tickets+","+tickets_price+")");
		}
	}
}
